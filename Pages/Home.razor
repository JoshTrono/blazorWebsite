@page "/"
<link href="css/mainlayout.css" rel="stylesheet" />
<div class="scrollable-content">
    <div class="image-section">
        <h2 style="text-align: center;">Joshua Trono</h2>
        <img src="@Picture" alt="Your Image"/>
    </div>

            <!-- Education Table -->
            <table class="table">
                <thead>
                <tr>
                    <th>Degree</th>
                    <th>Date</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var edu in _rows)
                {
                    <tr>
                        <td>@edu.Degree</td>
                        <td>@edu.Date</td>
                    </tr>
                }
                </tbody>
            </table>

            <!-- Skills Table -->
            <table class="table">
                <thead>
                <tr>
                    <th>Skills</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var skill in _skills)
                {
                    <tr>
                        <td>@skill.SkillName</td>
                    </tr>
                }
                </tbody>
            </table>

            <!-- Experience Table -->
            <table class="table">
                <thead>
                <tr>
                    <th>Company</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var exp in _experience)
                {
                    <tr>
                        <td>@exp.Company</td>
                        <td>@exp.Description</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>



